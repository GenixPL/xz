<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pw.xz.xdd.xz.MainActivity"
    android:id="@+id/drawerLayout">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/cor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.indoorway.android.map.sdk.view.IndoorwayMapView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mapView" />

        <!--<TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:id="@+id/tx"
            android:textSize="25dp"
            android:background="@drawable/bord"
            android:textColor="@color/cardview_light_background"
            android:textAllCaps="true"
            android:visibility="invisible"
            />-->
            <!--android:background="@color/indoorway_map_default_room_outline"-->

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_marginTop="70dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="7dp"
            android:visibility="invisible"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAlignment="center"
                android:id="@+id/tx"
                android:textSize="23dp"
                android:textColor="@color/indoorway_map_text_color"
                android:textAllCaps="true"
                android:visibility="invisible"
                android:background="@drawable/bord"
                />

        </android.support.v7.widget.CardView>

    </android.support.design.widget.CoordinatorLayout>
    
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@layout/navigation_menu"
        android:layout_gravity="start">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
